{
  "name": "@edlsh/amp-acp",
  "version": "0.4.0",
  "private": false,
  "type": "module",
  "bin": {
    "amp-acp": "src/index.js"
  },
  "description": "ACP adapter that bridges Amp CLI to Agent Client Protocol (Zed external agent)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edlsh/amp-acp.git"
  },
  "bugs": {
    "url": "https://github.com/edlsh/amp-acp/issues"
  },
  "homepage": "https://github.com/edlsh/amp-acp#readme",
  "keywords": [
    "acp",
    "agent-client-protocol",
    "zed",
    "amp",
    "adapter"
  ],
  "engines": {
    "node": ">=20"
  },
  "files": [
    "src/",
    "img/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "start": "node src/index.js",
    "lint": "eslint src test && prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs": "documentation build src/** -f html -o docs",
    "prepare": "husky"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "0.14.1",
    "split2": "^4.2.0"
  },
  "optionalDependencies": {
    "@sourcegraph/amp-sdk": "^0.1.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "documentation": "^14.0.3",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
